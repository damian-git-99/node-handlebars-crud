<div class='container mt-3'>
  <div class='row justify-content-center'>
    <div class='col-5'>
      <form action='/edit/{{customer._id}}' method='post'>
        <input
          class='form-control mb-1'
          type='text'
          name='name'
          value='{{customer.name}}'
        />
        <input
          class='form-control mb-1'
          type='text'
          name='email'
          value='{{customer.email}}'
        />
        <input class='btn btn-outline-dark' type='submit' value='Update User' />
      </form>
    </div>
  </div>
</div>